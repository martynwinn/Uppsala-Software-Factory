aconiodir = aconio
avedir = ave
cellodir = cello
comadir = coma
comapdir = comap
comdemdir = comdem
cravedir = crave
datamandir = dataman
essensdir = essens
findncsdir = findncs
flooddir = flood
VOIDOO_PROGS = cavity voidoo maprop
VOIDOO_OBJ = cavity.o voidoo.o cavity_subs.o voidoo_subs.o maprop.o
voidoodir = voidoo

all: aconio cello crave findncs flood $(VOIDOO_PROGS)

$(GKLIB_OBJS):
	cd gklib; \
	eval $(FC) -c $(OPT) -o $@ `basename $@ .o`.f

$(GKLIB): $(GKLIB_OBJS)
	cd gklib; \
	ar r $@ $?

aconio.o ave.o cello.o coma.o comap.o comdem.o flood.o:
	pwd=`pwd`; \
	cd `basename $@ .o`; \
	eval $(FC) -c $(OPT) -o $$pwd/$@ `basename $@ .o`.f

$(VOIDOO_OBJ):
	pwd=`pwd`; \
	cd voidoo; \
	eval $(FC) -c $(OPT) -o $$pwd/$@ `basename $@ .o`.f

aconio: $(aconiodir)/aconio.o 
	rm -f $(bindir)/$@; eval $(FC) -o $(bindir)/$@ $? $(LDFLAGS)
ave: $(avedir)/ave.o 
	rm -f $(bindir)/$@; eval $(FC) -o $(bindir)/$@ $? $(LDFLAGS)
cello: $(cellodir)/cello.o 
	rm -f $(bindir)/$@; eval $(FC) -o $(bindir)/$@ $? $(LDFLAGS)
